                <h2> Welcome, admin</h2>
                 
                    <tbody>
                    <% @users.each do |user| %>
                     <tr>
                         <p>
                      <td><%= user.name %></td>
                      <td> <%= user.email %></td>
                      <td>Admin? <%= user.admin %></td>
                      <td><%= link_to 'Edit', edit_user_password_path(user) %></td>
