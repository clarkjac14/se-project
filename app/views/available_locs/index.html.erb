<p id="notice"><%= notice %></p>

<h1>Available Locs</h1>

<table>
  <thead>
    <tr>
      <th>Label</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @available_locs.each do |available_loc| %>
      <tr>
        <td><%= available_loc.label %></td>
        <td><%= link_to 'Show', available_loc %></td>
        <td><%= link_to 'Edit', edit_available_loc_path(available_loc) %></td>
        <td><%= link_to 'Destroy', available_loc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Available Loc', new_available_loc_path %>
